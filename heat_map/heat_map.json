{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/single0904/3179/main/heat_map/cumulative_test.csv"
    },
    "title": "Daily Covid Tests in Malaysia",
    "params": [
          {
              "name": "Year_selection",
              "value": 2021,
              "bind": {
                "input": "range",
                "min": 2020,
                "max": 2022,
                "step": 1,
                "name": "Year:"
              }
          }
    ],
    "config": {
        "view": {
            "strokeWidth": 0,
            "step": 13
        },
        "axis": {
            "domain": false
        }
    },
    "transform": [{
      "timeUnit": "month",
      "field": "date",
      "as": "month"
    },
    {"filter": {"timeUnit": "year", "field": "date", "equal": "Year_selection"}}
    ],
    "mark": "rect",
    "encoding": {
        "x": {
            "field": "date",
            "timeUnit": "date",
            "type": "ordinal",
            "title": "Day",
            "axis": {
                "labelAngle": 0,
                "format": "%e"
            }
        },
        "y": {
            "field": "date",
            "timeUnit": "month",
            "type": "ordinal",
            "title": "Month"
        },
        "color": {
            "field": "value",
            "type": "quantitative"
        }
    }
  }
  