{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A bar chart that sorts the y-values by the x-values.",
    "data": {"url": "https://raw.githubusercontent.com/single0904/3179/main/A2/malaysia_cases(without_extra_states).csv"},
    "height": {"step": 17},
    "mark": "bar",
    "encoding": {
      "y": {
        "field": "state",
        "type": "ordinal",
        "sort": "-x",
        "title": "States in Malaysia"
      },
      "x": {
        "aggregate": "sum",
        "field": "cases_recovered",
        "title": "Cases Recovered"
      },
        "color": {"value": "#fd8d3c"},
        "tooltip": [
            {"field": "state", "type": "nominal", "title": "states"},
            {"field": "cases_recovered", "type": "quantitative"}
        ]
    }
  }