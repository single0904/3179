{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {"url": "https://raw.githubusercontent.com/single0904/3179/main/A2/stacked_bar%20.csv"
    },
    "title": {
      "text": "Total number of cases vs total number of recovered cases in each state",
      "subtitle": "Stacked bar chart",
      "subtitleColor": "gray"
    },
    "mark": "bar",
    "encoding": {
      "x": {"field": "state", "title": "States", "type": "nominal"},
      "y": {"field": "value", "type": "quantitative", "title": "Number of people"},
      "xOffset": {"field": "group"},
      "color": {"field": "group", "title": "Type of cases", "type": "nominal"},
      "tooltip": [
              {"field": "state", "type": "nominal", "title": "states"},
              {"field": "group", "type": "nominal"},
              {"field": "value", "type": "quantitative"}
          ]
    }
  }