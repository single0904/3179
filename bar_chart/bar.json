{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 500, "height": 400,
    "data": {"url": "https://raw.githubusercontent.com/single0904/3179/main/bar_chart/stacked_bar%20.csv"
    },
    "params": [
      {"name": "hover", "select": {"type": "point", "on": "mouseover", "fields": ["group"]}}
    ],
    "title": {
      "text": "Total number of cases vs total number of recovered cases in each state",
      "subtitle": "Group bar chart",
      "subtitleColor": "gray"
    },
    "mark": "bar",
    "encoding": {
      "x": {"field": "state", "title": "States", "type": "nominal"},
      "y": {"field": "value", "type": "quantitative", "title": "Number of people"},
      "xOffset": {"field": "group"},
      "color": {
        "condition":{
          "param": "hover",
          "field": "group", "title": "Type of cases", 
          "type": "nominal"},
          
        "value": "lightgrey"

      },
      "tooltip": [
              {"field": "state", "type": "nominal", "title": "states"},
              {"field": "group", "type": "nominal"},
              {"field": "value", "type": "quantitative"}
        ],
          
        "strokeWidth": {
          "condition": {"param": "hover", "empty": false, "value": 1},
          "value": 1
        },
        "opacity": {
          "condition": {"param": "hover", "empty": false, "value": 1},
          "value": 1
        }
    }
  }