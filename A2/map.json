{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Covid Cases per 1000 people in the world",
    "width": 800,
    "height": 400,
    "projection": {"type": "equalEarth"},
    "data": { 
        "url": "https://raw.githubusercontent.com/single0904/3179/main/A2/ne_110m_admin_0_countries.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    "layer":[
        {
            "transform": [
        {
            "lookup": "properties.SOVEREIGNT",
            "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/single0904/3179/main/A2/covid_worldwide.csv"
                },
                "key": "Country",
                "fields": ["Serial ","Total Cases", "Total Deaths", "Total Recovered","Active Cases", "Total Test", "Population"]
            }
        },
        {
            "calculate": "datum.TotalCases/1000 ", 
            "as": "New Cases per 1000 people"}
        ],

        "mark": {"type": "geoshape"},
        "encoding": {
            "color": {
                "field": "New Cases per 1000 people",
                "type": "quantitative",
                "scale": {
                    "type": "threshold",
                    "domain": [100, 200, 300],
                    "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]
                }
            },
                "tooltip": [
                    {"field": "properties.name", "type": "nominal", "title": "states"},
                    {"field": "Total Cases", "type": "quantitative"},
                    {"field": "New Cases per 1000 people", "type": "quantitative", "title": "New Cases per 1000 people"}
                ]
            }
        },
        {
            "data": {
              "url": "https://raw.githubusercontent.com/single0904/3179/main/A2/ne_110m_graticules_30%20(1).json",
              "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
            },
            "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
          },
          {
            "data": {
              "url": "https://raw.githubusercontent.com/single0904/3179/main/A2/ne_110m_ocean%20(1).json",
              "format": {"type": "topojson", "feature": "ne_110m_ocean"}
            },
            "mark": {"type": "geoshape", "fill": "skyblue"}
          }
    ]
}
    
    