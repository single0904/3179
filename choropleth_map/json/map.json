{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Malaysia Covid-19 Cases per 1000 people",
    "width": 600,
    "height": 300,
    "data": { 
        "url": "https://raw.githubusercontent.com/single0904/3179/main/choropleth_map/json/ne_10m_admin_1_states_provinces.json",
    "format": {"type": "topojson", "feature": "ne_10m_admin_1_states_provinces"}
    },
    "params": [
        {
            "name": "Month_selection",
            "value": 6,
            "bind": {
              "input": "range",
              "min": 1,
              "max": 12,
              "step": 1,
              "name": "Month:   "
            }
        },
        {
            "name": "Year_selection",
            "value": [30,0],
            "bind": {
              "input": "select",
              "options": [
                2020,
                2021,
                2022
              ],
              "labels": ["2020", "2021", "2022"],
              "name": "Year: "
            }
          }
    ],
    "projection": {"type": "equalEarth"},
    "layer":[
        {
            "data": {
              "url": "https://raw.githubusercontent.com/single0904/3179/main/choropleth_map/json/ne_10m_admin_1_states_provinces.json",
              "format": {"type": "topojson", "feature": "ne_10m_admin_1_states_provinces"}
            },
            "transform": [
              {"calculate": "'Data is not available in ' + datum.properties.name", "as": "note"}
            ],
            "mark": {"type": "geoshape", "fill": "white", "stroke": "black", "strokeWidth": 0.5},
            "encoding": {
              "tooltip": {
                "field": "note"
              }
            }
        },
        {
            "data": {
              "url": "https://raw.githubusercontent.com/single0904/3179/main/choropleth_map/json/ne_110m_ocean.json",
              "format": {"type": "topojson", "feature": "ne_110m_ocean"}
            },
            "mark": {"type": "geoshape", "fill": "skyblue"}
        },
        {
            "transform": [
        {
            "lookup": "properties.name",
            "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/single0904/3179/main/choropleth_map/data/cumulative_data.csv"
                },
                "key": "State",
                "fields": ["Cumulative New Cases"]
            }
        },
        {
            "calculate": "year(datum.Time)",  
            "as": "Year"
        },
        {
            "calculate": "month(datum.Time)",  
            "as": "Month"
        },
        {"filter": "datum.Year == Year_selection"},
        {"filter": "datum.Month == Month_selection"}

        ],

        "mark": {
            "type": "geoshape",
            "stroke": "#757575",
            "strokeWidth": 0.75
          },
        "encoding": {
            "color": {
                "field": "Cumulative New Cases",
                "type": "quantitative",
                "scale": {
                    "type": "threshold",
                    "domain": [100, 200, 300],
                    "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]
                }
            },
                "tooltip": [
                    {"field": "properties.name", "type": "nominal", "title": "states"},
                    {"field": "Cumulative New Cases", "type": "quantitative"},
                    {"field": "New Cases per 1000 people", "type": "quantitative", "title": "New Cases per 1000 people"}
                ]
            }
        },
        {
            "data": {
              "url": "https://raw.githubusercontent.com/single0904/3179/main/choropleth_map/json/ne_110m_graticules_5.json",
              "format": {"type": "topojson", "feature": "ne_110m_graticules_5"}
            },
            "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
        }
    ]
}
    
    